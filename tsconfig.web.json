{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["DOM", "DOM.Iterable", "ES2020"],
        "module": "ESNext",
        "jsx": "preserve",
        "strict": true,
        "noImplicitAny": true,
        "declaration": false,
        "declarationMap": false,
        "moduleResolution": "bundler",
        "composite": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "isolatedModules": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@js": ["./resources/js"],
            "@styles": ["./resources/styles"],
            "@images": ["./resources/images"]
        },
        "forceConsistentCasingInFileNames": true,
        "types": [
            "@wordpress/api-fetch",
            "@wordpress/block-editor",
            "@wordpress/blocks",
            "@wordpress/components",
            "@wordpress/data",
            "@wordpress/edit-post",
            "@wordpress/editor",
            "@wordpress/element",
            "@wordpress/i18n",
            "@wordpress/plugins",
            "@wordpress/rich-text",
            "jquery",
            "react",
            "react-dom"
        ]
    },
    "include": [
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx",
        "resources/js/**/*.d.ts"
    ]
}
