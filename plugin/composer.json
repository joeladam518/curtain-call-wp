{
    "name": "joeladam518/curtain-call-wp",
    "type": "project",
    "description": "CMS plugin for theatres looking to create productions, cast, and crew custom posts.",
    "require": {
        "php": "^8.1",
        "illuminate/collections": "^10.49",
        "nesbot/carbon": "^2.54.0"
    },
    "require-dev": {
        "carthage-software/mago": "^1.0.3",
        "symfony/var-dumper": "^6.4.0"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "carthage-software/mago": true
        }
    },
    "autoload": {
        "psr-4": {
            "CurtainCall\\": ["CurtainCall/"]
        },
        "files": [
            "functions.php"
        ]
    },
    "autoload-dev": {
        "files": [
            "functions-dev.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "build": "composer install --verbose --prefer-dist --no-progress --no-interaction --no-dev --optimize-autoloader",
        "analyze": "vendor/bin/mago analyse",
        "analyze:fix": "vendor/bin/mago analyse --fix",
        "format": "vendor/bin/mago format",
        "guard": "vendor/bin/mago guard",
        "lint": "vendor/bin/mago lint",
        "lint:fix": "vendor/bin/mago lint --fix"
    }
}
